extends layout

block content
    .row
        .col-sm-4
            img(src="#{pet.picUrlSq}").img-fluid
        .col-sm-8
            h1=pet.name
            p=pet.species
            p Born on #{pet.birthday}
            p=pet.description
            .text-right
                a(href="/pets/0/edit").btn-link Edit
            
            hr
            small.text-muted Comments for Rex
            form(action="/comments" method="POST")
                .form-group
                    textarea.form-control(name="body")
                .text-right
                    button(type="submit").btn.btn-primary Save Comment
            each c in comments
                p=c.body
                small.text-right
                    form(action="/pets/0/comments/0?_method=DELETE" method="POST")
                        .text-right
                            button(type="submit").text-danger Remove