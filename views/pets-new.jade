extends layout

block content
    
    .row.justify-content-center
        .col-sm-6
            legend New Pet
            form(action="pets", method="POST")
                .form-group
                    label Name
                    input.form-control(name="name")
                .form-group
                    label Species
                    input.form-control(name="species")    
                .form-group
                    label Birthday
                    input.form-control(name="birthday")    
                .form-group
                    label Favorite Food
                    input.form-control(name="favoriteFood")    
                button(type="submit").btn.btn-primary Save